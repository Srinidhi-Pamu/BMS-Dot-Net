@model BMSwebapi.Models.Account
@{
    ViewBag.Title = "Redirect";
}
<home>
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: lightpink;
        }

            .topnav a {
                float: left;
                color: darkblue;
                text-align: center;
                padding: 14px 17px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav a:hover {
                    background-color: #ddd;
                    color: black;
                }

                .topnav a.active {
                    background-color: lightcoral;
                    color: white;
                }
    </style>
</home>
<br />
@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <body>
        <div class="topnav">
            <a>@Html.ActionLink("Send", "../TransactionDetail/Deposit", new { AccountNumber = @Session["AccountNumber"] })</a>
            <a>@Html.ActionLink("Withdraw", "../TransactionDetail/Withdraw", new { AccountNumber = @Session["AccountNumber"] })</a>
            <a>@Html.ActionLink("Transfer", "../TransactionDetail/Transfer", new { AccountNumber = @Session["AccountNumber"] })</a>
            <a>@Html.ActionLink("PassBook", "../PassBook/Pass", new { AccountNumber = @Session["AccountNumber"] })</a>
            <a>@Html.ActionLink("User Details", "../Home/Details", new { AccountNumber = @Session["AccountNumber"] })</a>
            <a>@Html.ActionLink("Update Account", "../Account/UpdateDetails", new { AccountNumber = @Session["AccountNumber"] })</a>
            <a>@Html.ActionLink("Delete Account", "../Account/Delete", new { AccountNumber = @Session["AccountNumber"] })</a>
        </div>
    </body>
    <br />
      <div align="center">
            <div class="col-md-12">
                <a  class="thumbnail">
                    <img src="..\img\heist2.jpg" height="350" width="320" />
                </a>
                <h3>Go for Online Banking and Be safe from Money Heist</h3>
            </div>
            <br />
        </div> 


        if (TempData["Message"] != null)
        {
            <h4 style="color:mediumvioletred">@TempData["Message"]</h4>
        }

    }
    <div>
        @Html.ActionLink("Logout", "Index")
    </div>
