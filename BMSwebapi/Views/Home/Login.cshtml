@model BMSwebapi.Models.Account
@{
    ViewBag.Title = "Welcome to Login Page";
}
<head>
    <style>
        #leftbox {
            float: left;
            width: 50%;
        }

        #rightbox {
            float: right;
            width: 50%;
        }
    </style>
</head>
<h3>Login Here</h3>

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    if (TempData["Message"] != null)
    {
        <h5 style="color:mediumvioletred">@TempData["Message"]</h5>
    }

    <div id="boxes">
        <div id="rightbox">
            <div class="col-md-12" align="right">
                <a href="..\img\money.jpg" class="thumbnail">
                    <img src="..\img\money.jpg" height="250" weight="500" />
                </a>
            </div>
        </div>
        <div id="leftbox">
            <div class="form-horizontal"></div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>

            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-outline-success" />
                </div>
            </div>
        </div>
    </div>

    if (ViewBag.Message != null)
    {
        <h5 style="color:mediumvioletred;"> @ViewBag.Message </h5>
    }
}
<div>
    @Html.ActionLink("Logout", "Index")
</div>